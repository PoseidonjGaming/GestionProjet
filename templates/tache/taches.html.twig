{% extends 'base.html.twig' %}

{% block title %}Hello TacheController!{% endblock %}

{% block body %}
<h1>Liste des taches</h1>
<p><a href="{{ path('add_tache') }}">Ajouter une tache</a></p>

    <table>
        <thead>
            <th>Id</th>
            <th>Nom</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </thead>
        <tbody>
        {% for unetache in tache %}
        <tr>
            <td>{{ unetache.id }}</td>
            <td><a href="{{ path('tache', {'id': unetache.id}) }}">{{ unetache.nom }}</a></td> 
            <td><a href="{{ path('modify_tache', {'id': unetache.id}) }}">Modifier</a></td>
            <td><a href="{{ path('delete_tache', {'id': unetache.id}) }}">Supprimer</a></td>
        </tr>  
        {% endfor %}
        </tbody>
    </table>

{% endblock %}