{% extends 'base.html.twig' %}

{% block title %}{{form_title}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% block  login %}
<div class="example-wrapper">
    <h1>{{ form_title }}</h1>   
            <div class="champ"> 
              {{ form_start(form_login)}}
              <p>{{form_row(form_login.username)}}</p>
              <p>{{form_row(form_login.password)}}</p>
              <p>{{form_row(form_login.roles)}}</p>
        {% if form_login.user is defined %}<p>{{form_row(form_login.user)}}</p>{% endif %}
                    <h5>{{error}} </h5>
              <p>{{ form_end(form_login) }}</p></br>
            </div>
  
</div>
{% endblock %}
{% endblock %}