{% extends 'base.html.twig' %}
{% block title %}Choix de la famille{% endblock %}
{% block body %}

 <a class="btn btn-primary btn-lg" href="{{ path('choixProjets', {'idU': idU}) }}">Retour</a>
<div class="row">
    <div class="col-md-3">
        <div class="card-body" style="width: 18rem;"> 
            {{ block('image',  "intervention/choix_projet.html.twig") }}
            <h5>Projet: {{projet.nom}}</h5>
            </div>
        </div>
        <div class="col-md-9">
            <h2>Choisir une famille</h2>
            <div class="row">
                {% for uneFamille in familles %}
                    <div class="col-md-6"><br>
                        <div class="card mb-4" style="width: 18rem;">
                            <div class="card md-4">
                                <a class="btn btn-primary btn-lg" href="{{ path('choixTaches', {'idU': idU, 'idP': idP , 'idF': uneFamille.id}) }}">{{uneFamille.nom}}</a>
                            </div>
                        </div><br>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>  
</div>

{% endblock %}